{
  "name": "bitrix24-vue-app",
  "version": "1.0.0",
  "type": "module",
  "description": "Bitrix24 REST Application with Vue.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "build:report": "npm run build && npm run bundle:analyze",
    "bundle:analyze": "node scripts/analyze-bundle.cjs",
    "build:performance": "npm run build && npm run lighthouse",
    "lighthouse": "lighthouse http://localhost:3000 --config-path=lighthouse-config.json --output=json --output-path=./lighthouse-report.json",
    "test:build": "npm run build && npm run test:chunks && npm run test:warnings",
    "test:performance": "vitest run tests/performance/",
    "test:chunks": "node scripts/test-build-chunks.cjs",
    "test:warnings": "node scripts/test-build-warnings.cjs",
    "preview": "vite preview"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "chartjs-plugin-datalabels": "^2.2.0",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.3",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "vite": "^5.4.21"
  }
}
